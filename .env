# RAG Service configuration file
# Copy to .env and customize for your environment

# Backend Service
RAG_SERVICE_URL=http://rag-service:8001

# Vector Database
QDRANT_URL=http://qdrant:6333

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# LLM Model
LLM_MODEL=Qwen/Qwen2.5-7B-Instruct
LLM_DEVICE=cpu
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval
RETRIEVAL_TOP_K=5

# Backend
AUTH_ENABLED=false
SECRET_KEY=your-secret-key-change-in-production
LOG_LEVEL=INFO
DEBUG=false

# Storage
STORAGE_DIR=/storage

USE_OLLAMA=true
